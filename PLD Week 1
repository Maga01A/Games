#include <stdio.h>
#include <stdlib.h> 
#include <time.h>   

int main() {
    int secretNumber;
    int guess1, guess2, guess3;

    srand(time(NULL));
    secretNumber = (rand() % 100) + 1;
    printf("Guess the number (1-100): ");
    scanf("%d", &guess1);
    if (guess1 == secretNumber) {
        printf("You win!");
    } else {
        if (guess1 < secretNumber) {
            printf("Lower!\n");
        } else {
            printf("Higher!\n");
        }

    printf("Guess the number (1-100): ");   
        scanf("%d", &guess2);
        if (guess2 == secretNumber) {
            printf("You win!");
        } else {
            if (guess2 < secretNumber) {
                printf("Lower!\n");
            } else {
                printf("Higher!\n");
            }

    printf("Guess the number (1-100): ");       
            scanf("%d", &guess3);
            if (guess3 == secretNumber) {
                printf("You win!");
            } else {
                printf("You ran out of attempts.", secretNumber);
            }
        }
    }

    return 0;
}
